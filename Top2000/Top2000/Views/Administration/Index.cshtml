@model IEnumerable<Top2000.Models.VmUsersList>
@{
    ViewBag.Title = "Index";
}
<h3>List of users</h3>
@Html.ActionLink("Create new roll", "CreateRole")
<table class="table">
    <tr>
        <th>
            Úser
        </th>
        <th>
            Current Role
        </th>
        <th>
            Role
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                    <input type="hidden" value="@Html.DisplayFor(modelItem => item.userId)" name="userId" id="userId" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleUser)
                </td>
                <td>
                    @Html.DropDownList("RoleName", null, htmlAttributes: new { @class = "form-control" })
                </td>
                <td>
                    <input type="submit" name="button" value="Add role" class="btn btn-primary" />
                    <input type="submit" name="button" value="Delete role" class="btn btn-danger" />
                </td>

            </tr>
        }
    }

    </table>

